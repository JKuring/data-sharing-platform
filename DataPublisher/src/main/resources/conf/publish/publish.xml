<?xml version="1.0" encoding="UTF-8"?>
<publish:beans xmlns:publish="http://www.springframework.org/schema/beans"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <publish:bean id="hivePublishFTP" name="PUBLISH_HIVE_FTP" class="com.eastcom.datapublisher.service.HivePublishFTP"/>

    <publish:bean id="hivePublishHBase" name="PUBLISH_HIVE_HBASE" class="com.eastcom.datapublisher.service.SparkPublishHBase"/>

    <publish:bean id="hiveWarehousePath" name="hiveWarehousePath" class="java.lang.String">
        <publish:constructor-arg name="value" value="/apps/hive/warehouse/"/>
    </publish:bean>

    <publish:bean id="app_properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <publish:property name="locations">
            <publish:array>
                <publish:value>classpath:application.properties</publish:value>
            </publish:array>
        </publish:property>
    </publish:bean>

    <!-- command parameters: [cmd] -->
    <publish:bean id="pubFtpCmd" name="pubFtpCmd" class="java.lang.String">
        <publish:constructor-arg name="value"
                                 value="/home/ipms/spark_workscript/bin/export/exp_single_table.sh [cmd]"/>
    </publish:bean>

    <publish:bean id="pubHbaseCmd" name="pubHbaseCmd" class="java.lang.String">
        <publish:constructor-arg name="value"
                                 value="/home/ipms/spark_workscript/bin/export/pub_hbase.sh [cmd]"/>
    </publish:bean>

</publish:beans>